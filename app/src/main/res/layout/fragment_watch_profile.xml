<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_profile_photo_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:shrinkWidth="0.15" />

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_profile_photo_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:shrinkWidth="0.15" />

        <com.kidsdynamic.swing.androidswingapp.ViewPhoto
            android:id="@+id/watch_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/watch_profile_photo_start"
            android:layout_toStartOf="@+id/watch_profile_photo_end" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_profile_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:shrinkWidth="0.15" />

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_profile_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:shrinkWidth="0.15" />

        <EditText
            android:id="@+id/watch_profile_name"
            style="@style/edittext_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/watch_profile_start"
            android:layout_toStartOf="@+id/watch_profile_end"
            android:gravity="center"
            android:hint="Kid's Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusForward="@+id/registration_info_last" />

        <EditText
            android:id="@+id/watch_profile_zip"
            style="@style/edittext_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/watch_profile_name"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/watch_profile_start"
            android:layout_toStartOf="@+id/watch_profile_end"
            android:gravity="center"
            android:hint="Zip Code"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:nextFocusForward="@+id/registration_info_phone" />

    </RelativeLayout>

</LinearLayout>