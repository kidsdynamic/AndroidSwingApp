<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_finish_photo_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.7" />

        <com.kidsdynamic.swing.androidswingapp.ViewPhoto
            android:id="@+id/watch_finish_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/watch_finish_photo_sponge"
            android:layout_alignStart="@+id/watch_finish_photo_sponge"
            android:layout_gravity="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/watch_finish_name"
        style="@style/textview_photo_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_finish_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.7" />

        <Button
            android:id="@+id/watch_finish_dashboard"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_finish_sponge"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/watch_finish_sponge"
            android:layout_marginBottom="10dp"
            android:text="Go to Dashboard" />

        <Button
            android:id="@+id/watch_finish_another"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_finish_sponge"
            android:layout_alignStart="@+id/watch_finish_sponge"
            android:layout_below="@+id/watch_finish_dashboard"
            android:layout_marginBottom="10dp"
            android:text="Add Another Watch" />

    </RelativeLayout>

</LinearLayout>