<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_left" />

    <TextView
        style="@style/textview_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Sorry!" />

    <TextView
        style="@style/textview_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="We could't find your swing watch. Please\nmake sure your watch is fully charged" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/watch_sorry_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.7" />

        <Button
            android:id="@+id/watch_sorry_search"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_sorry_sponge"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/watch_sorry_sponge"
            android:layout_marginBottom="10dp"
            android:text="Search Again" />

        <Button
            android:id="@+id/watch_sorry_request"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_sorry_sponge"
            android:layout_alignStart="@+id/watch_sorry_sponge"
            android:layout_below="@+id/watch_sorry_search"
            android:layout_marginBottom="10dp"
            android:text="Request Access to Others" />

        <Button
            android:id="@+id/watch_sorry_contact"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_sorry_sponge"
            android:layout_alignStart="@+id/watch_sorry_sponge"
            android:layout_below="@+id/watch_sorry_request"
            android:layout_marginBottom="10dp"
            android:text="Contact Us" />

    </RelativeLayout>
</LinearLayout>
