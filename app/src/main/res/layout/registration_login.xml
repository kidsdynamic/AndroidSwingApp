<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <Button
            android:id="@+id/registration_login_login"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/registration_login_padding"
            android:layout_marginBottom="10dp"
            android:text="Sing Up / Login" />

        <TextView
            android:id="@+id/registration_login_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/registration_login_facebook"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="---- OR ----" />

        <Button
            android:id="@+id/registration_login_facebook"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:text="Login with Facebook" />

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>