<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/textview_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Battery" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/device_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:shrinkWidth="0.6" />

        <com.kidsdynamic.swing.androidswingapp.ViewPhoto
            android:id="@+id/device_battery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/device_sponge"
            android:layout_alignStart="@+id/device_sponge"
            android:src="@mipmap/battery_photo"
            app:selected="true"
            app:showBorder="false"
            app:showCross="false"
            app:showDarker="false" />

        <com.kidsdynamic.swing.androidswingapp.ViewProgressCircle
            android:id="@+id/device_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/device_sponge"
            android:layout_alignStart="@+id/device_sponge"
            android:progress="0"
            app:strokeActiveColor="@color/color_orange_main"
            app:strokeNormalColor="@color/color_gray_light"
            app:strokeType="arc"
            app:strokeWidth="10dp"
            app:total="100" />

        <View
            android:id="@+id/device_base_line"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/device_capacity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/device_base_line"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:text="0%"
            android:textColor="@color/color_orange_main"
            android:textSize="44sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>

