<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/calendar_main_selector_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.8" />

        <com.kidsdynamic.swing.androidswingapp.ViewCalendarSelector
            android:id="@+id/calendar_main_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/calendar_main_selector_sponge"
            android:layout_alignStart="@+id/calendar_main_selector_sponge"
            android:textColor="@color/color_gray_deep"
            android:textSize="18sp"
            android:textStyle="bold"
            app:calendarMode="week"
            app:exceedColor="@color/color_gray_deep"
            app:todayColor="@color/color_orange_main" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/calendar_main_calendar_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.9" />

        <com.kidsdynamic.swing.androidswingapp.ViewCalendarWeek
            android:id="@+id/calendar_main_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/calendar_main_calendar_sponge"
            android:layout_alignStart="@+id/calendar_main_calendar_sponge"
            android:textColor="@color/color_gray_deep"
            android:textSize="16sp"
            android:textStyle="bold"
            app:exceedColor="@color/color_gray_light"
            app:focusBackgroundColor="@color/color_orange_main"
            app:focusColor="@color/color_white"
            app:todayColor="@color/color_orange_main" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="10dp">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/calendar_main_alert_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/calendar_main_alert_sponge"
            android:layout_alignStart="@+id/calendar_main_alert_sponge"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendar_main_alert_time"
                style="@style/textview_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/calendar_main_alert_event"
                style="@style/textview_toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="1"
                android:gravity="center_horizontal|top" />

        </LinearLayout>

        <com.kidsdynamic.swing.androidswingapp.ViewCircle
            android:id="@+id/calendar_main_alert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/calendar_main_alert_sponge"
            android:layout_alignStart="@+id/calendar_main_alert_sponge"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            app:strokeBegin="-1"
            app:strokeColorActive="@color/color_orange"
            app:strokeColorNormal="@color/color_white_snow"
            app:strokeCount="60"
            app:strokeEnd="-1"
            app:strokeWidth="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="10dp">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/calendar_main_button_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:shrinkWidth="0.7" />

        <Button
            android:id="@+id/calendar_main_today"
            style="@style/button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/calendar_main_button_sponge"
            android:layout_alignStart="@+id/calendar_main_button_sponge"
            android:text="@string/calendar_main_today_schedule" />

        <Button
            android:id="@+id/calendar_main_monthly"
            style="@style/button_main"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/calendar_main_button_sponge"
            android:layout_alignStart="@+id/calendar_main_button_sponge"
            android:layout_below="@+id/calendar_main_today"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:text="@string/calendar_main_monthly_schedule" />

    </RelativeLayout>

</LinearLayout>
