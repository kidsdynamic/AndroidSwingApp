<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <com.kidsdynamic.swing.androidswingapp.ViewPhoto
        android:id="@+id/view_watch_contact_photo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:showCross="false"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/view_watch_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/view_watch_contact_photo"
        android:layout_toStartOf="@+id/view_watch_contact_button"
        android:gravity="start|center_vertical"
        android:text="Label" />

    <ImageView
        android:id="@+id/view_watch_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/iconbutton_bind"/>
</RelativeLayout>