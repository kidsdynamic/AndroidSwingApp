<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:src="@mipmap/monster_all"
        android:adjustViewBounds="false"
        android:cropToPadding="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/dashboard_sync_sponge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:shrinkWidth="0.6" />

        <com.kidsdynamic.swing.androidswingapp.ViewCircle
            android:id="@+id/dashboard_sync_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/dashboard_sync_sponge"
            android:layout_alignStart="@+id/dashboard_sync_sponge"
            app:strokeBegin="100"
            app:strokeColorActive="@color/color_orange_main"
            app:strokeColorNormal="@color/color_gray_light"
            app:strokeCount="100"
            app:strokeEnd="-1"
            app:strokeWidth="10dp" />

        <TextView
            android:id="@+id/dashboard_sync_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/dashboard_sync_sponge"
            android:layout_alignStart="@+id/dashboard_sync_sponge"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:gravity="center"
            android:text="Await Responses"
            android:textColor="@color/color_orange_main"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

