<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <TextView
            style="@style/textview_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Searching" />

        <com.kidsdynamic.swing.androidswingapp.ViewProgressCircle
            android:id="@+id/watch_search_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="60dp"
            app:strokeWidth="4dp"
            app:strokeActiveColor="@color/color_white_snow"
            app:strokeNormalColor="@color/color_gray_light"
            app:duration="15000"
            app:strokeType="dot"
            app:repeat="false"/>
    </RelativeLayout>

</LinearLayout>