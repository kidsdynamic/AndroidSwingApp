<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kidsdynamic.swing.androidswingapp.ViewSponge
        android:id="@+id/sync_search_sponge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:shrinkHeight="0.36"
        app:shrinkWidth="0.7" />

    <TextView
        android:id="@+id/sync_search_title"
        style="@style/textview_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sync_search_sponge"
        android:layout_alignEnd="@id/sync_search_sponge"
        android:layout_alignStart="@+id/sync_search_sponge"
        android:layout_alignTop="@+id/sync_search_sponge"
        android:gravity="center"
        android:text="Searching\nfor Your\nDevice!" />

    <com.kidsdynamic.swing.androidswingapp.ViewProgressCircle
        android:id="@+id/sync_search_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sync_search_sponge"
        android:layout_alignEnd="@id/sync_search_sponge"
        android:layout_alignStart="@+id/sync_search_sponge"
        android:layout_alignTop="@+id/sync_search_sponge"
        app:duration="12000"
        app:repeat="true"
        app:strokeActiveColor="@color/color_orange"
        app:strokeNormalColor="@color/color_white_snow"
        app:strokeType="arc"
        app:strokeWidth="4dp"
        app:total="12" />

    <Button
        android:id="@+id/sync_search_button1"
        style="@style/button_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/sync_search_sponge"
        android:layout_alignStart="@+id/sync_search_sponge"
        android:layout_below="@+id/sync_search_sponge"
        android:layout_marginTop="40dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/sync_search_button2"
        style="@style/button_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/sync_search_sponge"
        android:layout_alignStart="@+id/sync_search_sponge"
        android:layout_below="@+id/sync_search_button1"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

</RelativeLayout>