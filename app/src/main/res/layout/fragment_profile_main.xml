<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_sky"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="5">

        <com.kidsdynamic.swing.androidswingapp.ViewPhoto
            android:id="@+id/profile_main_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/profile_main_name"
            app:selected="false"
            app:showCross="false"
            app:strokeWidth="3dp" />

        <TextView
            android:id="@+id/profile_main_name"
            style="@style/textview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Parent Name" />

    </RelativeLayout>

    <TextView
        style="@style/textview_profile_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/color_yellow_dust"
        android:gravity="center"
        android:text="My Hosting Device" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/color_yellow_dust"
        android:gravity="center"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profile_main_device_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.kidsdynamic.swing.androidswingapp.ViewPhoto
                    android:id="@+id/profile_main_device_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:selected="false"
                    app:showCross="true" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        style="@style/textview_profile_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/color_blue_green"
        android:gravity="center"
        android:text="Device Shared with Me" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/color_blue_green"
        android:gravity="center"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profile_main_shared_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.kidsdynamic.swing.androidswingapp.ViewPhoto
                    android:id="@+id/profile_main_shared_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:selected="false"
                    app:showCross="true" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/profile_main_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:shrinkWidth="0.15" />

        <com.kidsdynamic.swing.androidswingapp.ViewSponge
            android:id="@+id/profile_main_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:shrinkWidth="0.15" />

        <Button
            style="@style/button_main"
            android:id="@+id/profile_main_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profile_main_start"
            android:layout_toStartOf="@+id/profile_main_end"
            android:text="Logout" />

    </RelativeLayout>
</LinearLayout>

