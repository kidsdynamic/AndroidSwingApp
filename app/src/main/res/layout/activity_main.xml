<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_control"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/city_newyork" />

    <LinearLayout
        android:id="@+id/main_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_control_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/control_button_background"
            android:gravity="center"
            android:src="@drawable/control_button_device" />

        <ImageView
            android:id="@+id/main_control_calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/control_button_background"
            android:gravity="center"
            android:src="@drawable/control_button_calendar" />

        <ImageView
            android:id="@+id/main_control_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/control_button_background"
            android:gravity="center"
            android:src="@drawable/control_button_dashboard" />

        <ImageView
            android:id="@+id/main_control_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/control_button_background"
            android:gravity="center"
            android:src="@drawable/control_button_profile" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_control"
        android:orientation="vertical" />

</RelativeLayout>