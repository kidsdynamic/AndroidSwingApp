<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="textview_main">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_hint">
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textview_toolbar">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_photo_cancel">
        <item name="android:textColor">@color/color_orange_main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textview_photo_name">
        <item name="android:textColor">@color/color_blue_green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_profile_group">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_main">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edittext_main" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/main_edittext_background</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edittext_profile" parent="@android:style/Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
