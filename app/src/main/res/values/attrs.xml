<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="strokeType" format="enum">
        <enum name="dot" value="0" />
        <enum name="arc" value="1" />
    </attr>

    <declare-styleable name="ViewSponge">
        <attr name="shrinkWidth" format="float" />
        <attr name="shrinkHeight" format="float" />
    </declare-styleable>

    <declare-styleable name="ViewPhotoClip">
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="ViewTextEditor">
        <attr name="android:src" />
        <attr name="android:textSize" />
    </declare-styleable>

    <declare-styleable name="ViewCalendar">
        <attr name="android:textSize" />
        <attr name="android:textStyle" />
        <attr name="android:textColor" />
        <attr name="todayColor" format="color" />
        <attr name="focusColor" format="color" />
        <attr name="focusBackgroundColor" format="color" />
        <attr name="exceedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ViewCalendarSelector">
        <attr name="android:textSize" />
        <attr name="android:textStyle" />
        <attr name="android:textColor" />
        <attr name="calendarMode" format="enum">
            <enum name="year" value="0" />
            <enum name="month" value="1" />
            <enum name="week" value="2" />
            <enum name="day" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewCalendarDaily">
        <attr name="android:layout_gravity" />
        <attr name="start_hour" format="integer" />
        <attr name="start_minute" format="integer" />
        <attr name="end_hour" format="integer" />
        <attr name="end_minute" format="integer" />
    </declare-styleable>

    <declare-styleable name="ViewCircle">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColorActive" format="color" />
        <attr name="strokeColorNormal" format="color" />
        <attr name="strokeType" />
        <attr name="strokeCount" format="integer" />
        <attr name="strokeBegin" format="integer" />
        <attr name="strokeEnd" format="integer" />
        <attr name="android:src" />
        <attr name="fillColor" format="color" />
        <attr name="fillDarker" format="boolean" />
        <attr name="crossWidth" format="dimension" />
        <attr name="crossColor" format="color" />
        <attr name="crossRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="ViewShape">
        <attr name="color" format="color" />
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
            <enum name="triangle_top" value="2" />
            <enum name="triangle_bottom" value="3" />
            <enum name="triangle_left" value="4" />
            <enum name="triangle_right" value="5" />
        </attr>
        <attr name="desiredSize" format="dimension" />
    </declare-styleable>

</resources>